@page
@model ElearningApp.Pages.Exercises.CategoryViewModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<style>
    body {
        color: black;
        font-family: cursive
    }

    table {
        font-size: 13px
    }

</style>
<br />
<h3>List of Category</h3>

<a class="btn btn-primary btn-sm" href='/Exercises/CategoryAdd'> Add Category</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.categorylist)
        {

            <tr>
                <td>@item.Id</td>
                <td>@item.CategoryName</td>




                <td>
                    <a class="btn btn-primary btn-sm" href='/Exercises/CategoryEdit?id=@item.Id'> Edit</a>

                    <a class="btn btn-primary btn-sm" href='/Exercises/CategoryDelete?id=@item.Id'> Delete</a>
                </td>
            </tr>

        }
    </tbody>
</table>